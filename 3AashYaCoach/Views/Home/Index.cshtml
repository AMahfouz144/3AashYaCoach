<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .dashboard-card {
        transition: transform 0.2s ease-in-out;
        border-radius: 1rem;
        overflow: hidden;
    }

        .dashboard-card:hover {
            transform: scale(1.02);
        }

    .dashboard-icon {
        font-size: 2rem;
        padding: 1rem;
        border-radius: 50%;
    }

    .card-body {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .stat-text {
        line-height: 1.2;
    }
</style>

<div class="container mt-4">
    <div class="row g-4">
        <!-- Members -->
        <div class="col-md-3">
            <div class="card shadow-sm bg-white dashboard-card border-0">
                <div class="card-body">
                    <div class="stat-text">
                        <div class="text-muted">Total Members</div>
                        <div class="fs-4 fw-bold text-dark">@ViewBag.TotalMembers</div>
                    </div>
                    <div class="dashboard-icon bg-primary text-white">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Trainers -->
        <div class="col-md-3">
            <div class="card shadow-sm bg-white dashboard-card border-0">
                <div class="card-body">
                    <div class="stat-text">
                        <div class="text-muted">Active Trainers</div>
                        <div class="fs-4 fw-bold text-dark">@ViewBag.ActiveTrainers</div>
                    </div>
                    <div class="dashboard-icon bg-success text-white">
                        <i class="bi bi-person-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sessions -->
        <div class="col-md-3">
            <div class="card shadow-sm bg-white dashboard-card border-0">
                <div class="card-body">
                    <div class="stat-text">
                        <div class="text-muted">Upcoming Sessions</div>
                        <div class="fs-4 fw-bold text-dark">@ViewBag.UpcomingSessions</div>
                    </div>
                    <div class="dashboard-icon bg-warning text-white">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Announcements -->
        <div class="col-md-3">
            <div class="card shadow-sm bg-white dashboard-card border-0">
                <div class="card-body">
                    <div class="stat-text">
                        <div class="text-muted">Announcements</div>
                        <div class="fs-4 fw-bold text-dark">@ViewBag.TotalAnnouncements</div>
                    </div>
                    <div class="dashboard-icon bg-danger text-white">
                        <i class="bi bi-megaphone"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
