@model IEnumerable<_3AashYaCoach.Models.Coach>

@{
    ViewData["PlanName"] = "Trainers";
}

<h2 class="mb-4">📋 Coaches List</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Coach
    </a>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Certificates</th>
            <th>Experience</th>
            <th style="width:150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Email</td>
                <td>@item.User.FullName</td>
                <td>@item.Certificates</td>
                <td>@item.ExperienceDetails</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info text-white">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this coach?');">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
