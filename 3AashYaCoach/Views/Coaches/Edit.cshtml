@using _3AashYaCoach.ViewModel
@model EditCoachViewModel

@{
    ViewData["PlanName"] = "Edit Coach";
}

<h2>Edit Coach</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Certificates" class="form-label"></label>
        <input asp-for="Certificates" class="form-control" />
        <span asp-validation-for="Certificates" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExperienceDetails" class="form-label"></label>
        <textarea asp-for="ExperienceDetails" class="form-control" rows="4"></textarea>
        <span asp-validation-for="ExperienceDetails" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
