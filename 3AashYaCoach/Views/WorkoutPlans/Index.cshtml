@model IEnumerable<_3AashYaCoach.Models.WorkoutPlan>

@{
    ViewData["Title"] = "Workout Plans";
}

<h1 class="display-4 mb-4 text-primary">Workout Plans</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered align-middle shadow-sm rounded">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.PlanName)</th>
                <th>@Html.DisplayNameFor(model => model.PrimaryGoal)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th>Coach</th>
                <th>@Html.DisplayNameFor(model => model.IsPublic)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PlanName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrimaryGoal)</td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@item.Coach?.FullName</td>
                    <td>@Html.DisplayFor(modelItem => item.IsPublic)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
